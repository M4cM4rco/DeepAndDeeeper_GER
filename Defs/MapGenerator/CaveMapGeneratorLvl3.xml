<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<MapGeneratorDef ParentName="ShashlichnikUndergroundBase">
		<defName>ShashlichnikUndergroundLvl3</defName>
		<genSteps>
			<li>ShashlichnikUnderground_RocksFromGridLvl3</li>
			<li>ShashlichnikUndergroundInterest_CorpsePile</li>
			<li>ShashlichnikUndergroundInterest_CorpseGear</li>
			<li>ShashlichnikUndergroundInterest_Hive</li>
			<li>ShashlichnikUndergroundInterest_SingleCryptosleepPod</li>
			<li>ShashlichnikUnderground_RewardLvl3</li>
			<li MayRequire="Ludeon.RimWorld.Anomaly">ShashlichnikUndergroundInterest_Noctol</li>
		</genSteps>
	</MapGeneratorDef>

	<GenStepDef>
		<defName>ShashlichnikUnderground_RocksFromGridLvl3</defName>
		<order>200</order>
		<genStep Class="Shashlichnik.GenStep_RocksFromGrid">
			<mineableModifier>1.7</mineableModifier>
		</genStep>
	</GenStepDef>

	<GenStepDef>
		<defName>ShashlichnikUnderground_RewardLvl3</defName>
		<order>302</order>
		<genStep Class="Shashlichnik.GenStep_LevelReward">
			<reward>ShashlichnikUndergroundLvl3Reward</reward>
			<countOfRewards>1~4</countOfRewards>
		</genStep>
	</GenStepDef>
	
	<!--Reward-->
	<ThingSetMakerDef>
		<defName>ShashlichnikUndergroundLvl3Reward</defName>
		<root Class="ThingSetMaker_RandomOption">
			<options>

				<!-- Survival meal -->
				<li>
					<weight>0.33</weight>
					<thingSetMaker Class="ThingSetMaker_StackCount">
						<fixedParams>
							<filter>
								<thingDefs>
									<li>MealSurvivalPack</li>
								</thingDefs>
							</filter>
							<countRange>9~15</countRange>
						</fixedParams>
					</thingSetMaker>
				</li>

				<!-- Medicine -->
				<li>
					<weight>0.33</weight>
					<thingSetMaker Class="ThingSetMaker_StackCount">
						<fixedParams>
							<filter>
								<thingDefs>
									<li>MedicineIndustrial</li>
								</thingDefs>
							</filter>
							<countRange>6~12</countRange>
						</fixedParams>
					</thingSetMaker>
				</li>

				<!-- Luciferium -->
				
				<li>
					<weight>0.66</weight>
					<thingSetMaker Class="ThingSetMaker_StackCount">
						<fixedParams>
							<filter>
								<thingDefs>
									<li>Luciferium</li>
								</thingDefs>
							</filter>
							<countRange>3~5</countRange>
						</fixedParams>
					</thingSetMaker>
				</li>
				

				<!-- Silver -->
				<li>
					<weight>0.33</weight>
					<thingSetMaker Class="ThingSetMaker_StackCount">
						<fixedParams>
							<filter>
								<thingDefs>
									<li>Silver</li>
								</thingDefs>
							</filter>
							<countRange>300~400</countRange>
						</fixedParams>
					</thingSetMaker>
				</li>


				<!-- Components -->
				<li>
					<weight>1</weight>
					<thingSetMaker Class="ThingSetMaker_StackCount">
						<fixedParams>
							<filter>
								<thingDefs>
									<li>ComponentIndustrial</li>
								</thingDefs>
							</filter>
							<countRange>6~15</countRange>
						</fixedParams>
					</thingSetMaker>
				</li>
				
				<!-- Advanced components -->
				<li>
					<weight>0.55</weight>
					<thingSetMaker Class="ThingSetMaker_StackCount">
						<fixedParams>
							<filter>
								<thingDefs>
									<li>ComponentSpacer</li>
								</thingDefs>
							</filter>
							<countRange>1~3</countRange>
						</fixedParams>
					</thingSetMaker>
				</li>

				<!-- Ultratech meds -->
				<li>
					<weight>0.15</weight>
					<thingSetMaker Class="ThingSetMaker_StackCount">
						<fixedParams>
							<filter>
								<thingDefs>
									<li>MedicineUltratech</li>
								</thingDefs>
							</filter>
							<countRange>1~4</countRange>
						</fixedParams>
					</thingSetMaker>
				</li>
				
				<!-- Weapons -->
				<li>
					<weight>0.55</weight>
					<thingSetMaker Class="ThingSetMaker_MarketValue">
						<fixedParams>
							<filter>
								<categories>
									<li>Weapons</li>
								</categories>
								<disallowedThingDefs>
									<li>WoodLog</li>
								</disallowedThingDefs>
								<thingSetMakerTagsToDisallow>
									<li>RewardStandardHighFreq</li>
									<li>RewardStandardCore</li>
								</thingSetMakerTagsToDisallow>
							</filter>
							<totalMarketValueRange>1000~2000</totalMarketValueRange>
						</fixedParams>
					</thingSetMaker>
				</li>
				
				<!-- We're rich -->
				<li>
					<weight>0.55</weight>
					<thingSetMaker Class="ThingSetMaker_StackCount">
						<fixedParams>
							<filter>
								<thingDefs>
									<li>ShashlichnikCompressedGold</li>
								</thingDefs>
							</filter>
							<countRange>1~1</countRange>
						</fixedParams>
					</thingSetMaker>
				</li>

			</options>
		</root>
	</ThingSetMakerDef>
</Defs>